{
    "id": 217838464,
    "name": "employee_data_quality",
    "description": "ruleset to verify data quality of employee data",
  	"notification_preferences": [
		"EMAIL"
	],
    "rules" : [
      {
        "sequence": 1,
        "status": "active",
        "rule_details": {
          "id": 28,
          "name": "employee.emp_id.range_check",
          "description": "rule to validate is salary is in range 25000 to 100000",
          "data_entity_associations": [
            {
              "entity_id": "185066046",
              "entity_name": "employee",
              "entity_physical_name": "employee",
              "entity_behaviour": "SOURCE",
              "entity_type": "FILE",
              "entity_sub_type": "CSV",
              "primary_key": "emp_id",
              "properties": [
                {
                  "key": "path",
                  "value": "data\\input\\employee.csv",
                  "type": "string"
                }
              ]
            }
          ],
          "properties": [
               {
                 "key":"COLUMN_NAME" ,
                 "value":"salary"
               },
               {
                 "key":"UPPER_LIMIT" ,
                 "value":"select * from employee_migrated"
               },
               {
                 "key":"LOWER_LIMIT" ,
                 "value":"select * from employee_migrated"
               },
               {
                 "key":"FILTER_CONDITIONS" ,
                 "value":"emp_id > 4"
               }
          ],
          "template": {
             "id": 28,
             "name": "RANGE_CHECK",
             "description": "compare source and target entities",
            "dq_metric": "COMPLETENESS",
             "properties": [
               {
                  "mandatory": true,
                  "description": "Column on which null check needs to be performed",
                  "type": "VARIABLE",
                  "name": "COLUMN_NAME"
               },
               {
                   "mandatory": true,
                   "description": "Condition to be applied on the column",
                   "type": "CONSTANT",
                   "name": "BASE_CRITERIA",
                   "value" : "{COLUMN_NAME} BETWEEN {LOWER_LIMIT} AND {UPPER_LIMIT}"
                },
                {
                     "mandatory": true,
                     "description": "filter condition to be applied on the table",
                     "type": "VARIABLE",
                     "name": "FILTER_CONDITIONS"
                 },
               	 {
                     "mandatory": true,
                     "description": "ACCURACY RANGE_CHECK UPPER_LIMIT",
                     "type": "VARIABLE",
                      "name": "UPPER_LIMIT"
                  },
                  {
                      "mandatory": true,
                       "description": "ACCURACY RANGE_CHECK LOWER_LIMIT",
                       "type": "VARIABLE",
                       "name": "LOWER_LIMIT"
                  }
             ]
          }
        }
      }
    ]
}